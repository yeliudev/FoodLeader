.text {
  margin: 70rpx 50rpx 0 50rpx;
  width: 650rpx;
  height: 300rpx;
  font-size: 30rpx;
}

.flex-container {
  margin: 30rpx 0 0 50rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
}

.photo {
  margin: 0 25rpx 20rpx 0;
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  background-color: rgba(242, 242, 242, 1);
}

.remove {
  position: relative;
  top: -249rpx;
  left: -19rpx;
  width: 38rpx;
  height: 38rpx;
}

.add-image-icon {
  position: relative;
  bottom: -15rpx;
  right: -15rpx;
  width: 170rpx;
  height: 170rpx;
}

.location {
  margin: 16rpx 0 30rpx;
  position: relative;
  right: -70rpx;
  width: 610rpx;
  height: 100rpx;
  border-top: 1rpx rgba(242, 242, 242, 1) solid;
  border-bottom: 1rpx rgba(242, 242, 242, 1) solid;
  overflow: hidden;
}

.location-icon {
  position: relative;
  bottom: -13rpx;
  right: -10rpx;
  width: 50rpx;
  height: 50rpx;
}

.location-text {
  position: relative;
  right: -25rpx;
  line-height: 100rpx;
  font-size: 32rpx;
}

.submit {
  position: relative;
  left: 40rpx;
  width: 670rpx;
  height: 65rpx;
  border-radius: 50rpx;
  background-color: rgb(22, 20, 24);
  color: rgba(255, 255, 255, 1);
  font-size: 34rpx;
  text-align: center;
  padding-top: 13rpx;
  font-family: PingFang SC;
  border: 1px solid rgba(187, 187, 187, 1);
  margin-bottom: 30rpx;
}

.submit:active {
  background-color: #e2e1e3;
  color: #69686a;
}
